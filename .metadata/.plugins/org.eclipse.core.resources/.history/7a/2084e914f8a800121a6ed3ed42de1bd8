	public boolean isATMCardInNetwork(Card customerATMCard) {

		if(bankNetwork.isATMCardsInNetwork(customerATMCard)) {
			transaction.setStripNum(customerATMCard.getStripNum());
			transaction.setDidtheCardVerify(true);
		}
		return false;
		
	}

